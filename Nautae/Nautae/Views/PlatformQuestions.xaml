<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nautae.Views.PlatformQuestions">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Padding>
                <OnIdiom x:TypeArguments="Thickness">
                    <OnIdiom.Phone>40,0,40,0
                    </OnIdiom.Phone>
                </OnIdiom>
            </StackLayout.Padding>
            <Entry Placeholder="Please Enter Your Question" BackgroundColor="White" x:Name="Post"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="40,40,40,100" HorizontalTextAlignment="Center" />
            <Button Text="Ask Away!" Clicked="Button_Clicked" />

            <Label  Text="Recetly Asked"/>
            <BoxView x:Name="askeedQuestions" HeightRequest="200" HorizontalOptions="FillAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>